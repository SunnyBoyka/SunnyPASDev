@{
    ViewBag.Title = "Change Password";
}

<script type="text/javascript">
    var user_info = {
        name : "@ViewBag.Name",
        mail: "@ViewBag.TempUserEmail",
        TempPWD: "@ViewBag.TempPWD",
        role : "@ViewBag.Role",
        id: "@ViewBag.id"
    }
    var ChangePassWordApp ={
        start_action:function(){
            //alert(JSON.stringify(user_tmp_info));
            UpdatePassword.start_action("UpdatePassword", { "title": "Update Password", "user_info":user_info })
        }
    };$(document).ready(() => ChangePassWordApp.start_action());
</script>
<UpdatePassword></UpdatePassword>